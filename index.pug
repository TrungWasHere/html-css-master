mixin tourItem 
    .tour
        .tour-top
            img.tour-image(src='./images/img1.png', alt='')
            span.price From $40
        .tour-content
            h3.tour-title
                | Thailands Ayutthaya Temples1
                | Cruise from Bangkok
            .tour-rating
                .tour-review
                .tour-star
                    img(src='../images/star.png', alt='tour-rating')
                .tour-review-count
                    span 4.8 (12 reviews)
                span.tour-duration Duration: 9 hours
            a.tour-button(href='https://google.com', target='_blank', rel='noopener noreferrer')
                | Tours
                | Price
                | $61
    





